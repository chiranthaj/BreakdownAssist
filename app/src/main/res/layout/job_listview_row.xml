<?xml version="1.0" encoding="utf-8"?>
<lk.steps.breakdownassist.RecyclerViewCards.MapCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/job_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="job_no"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
        <CheckBox
            android:id="@+id/card_view_checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/job_no"
            android:layout_alignBottom="@+id/job_no"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/job_no"
            card_view:srcCompat="@drawable/google_maps_icon" />
        <TextView
            android:id="@+id/test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/job_no"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Acct. No."
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/acct_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/job_no"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_toEndOf="@+id/text2"
            android:text="Acc. No. not found"
            android:textSize="22sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/acct_num"
            android:text="Received "
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1"
            android:text="Completed "
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text2"
            android:text="Discription "
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text2"
            android:layout_toEndOf="@+id/text2"
            android:text="Description"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Name not found"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/text5"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Address not found"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/received_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/acct_num"
            android:layout_toEndOf="@+id/text1"
            android:text="date"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/completed_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/received_date_time"
            android:layout_toEndOf="@+id/text1"
            android:text="Unattained job"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <Button
            android:id="@+id/card_view_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_toStartOf="@+id/card_view_button2"
            android:text="Button"
            android:visibility="gone" />

        <Button
            android:id="@+id/card_view_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/address"
            android:text="button2"
            android:visibility="gone" />


        <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map_view"
            map:liteMode="true"
            map:mapType="normal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/address"/>

        <TextView
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_below="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTripInfo"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</lk.steps.breakdownassist.RecyclerViewCards.MapCardView>