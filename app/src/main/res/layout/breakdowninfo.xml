<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >



        <TextView
            android:id="@+id/job_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="0"
            android:text="job_no"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/acct_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="acct_num"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/status"
            android:text="Status : "
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acct_num"
            android:layout_column="0"
            android:layout_row="2"
            android:text="name"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_column="0"
            android:layout_row="3"
            android:text="address"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_column="0"
            android:layout_row="4"
            android:text="description"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_column="2"
            android:layout_row="0"
            android:text="status"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/status"
            android:text="Received "
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1"
            android:text="Completed "
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/received_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/status"
            android:layout_toEndOf="@+id/text1"
            android:text="date"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/completed_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/received_date_time"
            android:layout_toEndOf="@+id/text1"
            android:text="date"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />
</RelativeLayout>
