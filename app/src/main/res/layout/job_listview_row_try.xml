<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#cbdbc5"
            android:padding="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/JOB_NO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="JOB_NO"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/completed_date_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/JOB_NO"
                android:background="@drawable/sticker"
                android:text="Unattained job"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgPriority"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/JOB_NO"
                android:layout_toEndOf="@+id/completed_date_time"
                android:src="@drawable/warning" />

            <ImageView
                android:id="@+id/imgSource"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/JOB_NO"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_cloud_download"
                android:layout_toEndOf="@+id/imgPriority" />

            <CheckBox
                android:id="@+id/card_view_checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/test4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Acct. No."
                android:layout_weight="0.3"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/acct_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Acc. No. not found"
                android:gravity="center_vertical"
                android:layout_weight="0.7"
                android:textSize="22sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Received"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/received_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="date"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/text5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Description "
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="DESCRIPTION"
                android:textAlignment="viewStart"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="22sp" />


        </LinearLayout>
        <TextView
            android:id="@+id/txtNote"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Note "
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name not found"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address not found"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="22sp" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#e3e4e5">

            <com.google.android.gms.maps.MapView
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_view"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                map:liteMode="true"
                map:mapType="normal" />

            <TextView
                android:id="@+id/txtTripInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:padding="5dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <lk.steps.breakdownassistpluss.RecyclerViewCards.ChildListView
                android:id="@+id/childrenList"
                android:layout_margin="1dp"
                android:background="#fff"
                android:layout_below="@+id/map_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/card_view_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toStartOf="@+id/card_view_button2"
        android:text="Button"
        android:visibility="gone" />

    <Button
        android:id="@+id/card_view_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@+id/address"
        android:text="button2"/>
</android.support.v7.widget.CardView>